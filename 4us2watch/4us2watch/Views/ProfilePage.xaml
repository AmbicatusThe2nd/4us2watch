                               HorizontalTextAlignment="Center"
                               Padding="-30,0,0,0">
                            <Label.GestureRecognizers>
                                <TapGestureRecognizer Command="{Binding TVSeriesCommand}" />
                            </Label.GestureRecognizers>
                        </Label>
                        <Label Grid.Column="2" Text="Documentaries"
