<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             x:Class="_4us2watch.Views.GridPage">
    <ContentPage.Content>
        <!--Redirectaj iz logina sem (ne iz prvega! prvi login gre na GenreAssignmentPage!-->
        <StackLayout BackgroundColor="IndianRed">
            <!--Friends list-->

            <!--Help, log out-->
            <StackLayout Margin="0,0,0,20" BackgroundColor="Pink">
                <Grid ColumnSpacing="0" BackgroundColor="LightGreen">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>
                    <Label Text="Help"
                       FontSize="Medium"
                       TextDecorations="Underline"
                       TextColor="Black"
                       HorizontalTextAlignment="Start"
                       Padding="50,0,0,0">
                        <Label.GestureRecognizers>
                            <TapGestureRecognizer Command="{Binding HelpCommand}" />
                        </Label.GestureRecognizers>
                    </Label>
                    <Label Grid.Column="1" Text="Log out"
                       FontSize="Medium"
                       TextDecorations="Underline"
                       TextColor="Black"
                       HorizontalTextAlignment="End"
                       Padding="0,0,50,0">
                        <Label.GestureRecognizers>
                            <TapGestureRecognizer Command="{Binding LogOutCommand}" />
                        </Label.GestureRecognizers>
                    </Label>
                </Grid>

                <!--Home, Friends, Profile-->
                <Grid ColumnSpacing="0" BackgroundColor="LightGray">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>
                    <Label Grid.Column="0" Text="Home"
                       FontSize="27"
                       FontAttributes="Bold"
                       TextColor="Black"
                       HorizontalTextAlignment="Start"
                       Padding="30,0,0,0">
                        <Label.GestureRecognizers>
                            <TapGestureRecognizer Command="{Binding HomeCommand}" />
                        </Label.GestureRecognizers>
                    </Label>
                    <Label Grid.Column="1" Text="Friends"
                       FontSize="27"
                       TextColor="Black"
                       FontAttributes="Bold"
                       HorizontalTextAlignment="Center"
                       Padding="0,0,0,0">
                        <Label.GestureRecognizers>
                            <TapGestureRecognizer Command="{Binding FriendsCommand}" />
                        </Label.GestureRecognizers>
                    </Label>
                    <Label Grid.Column="2" Text="Profile"
                       FontSize="27"
                       TextColor="Black"
                       FontAttributes="Bold"
                       HorizontalTextAlignment="End"
                       Padding="0,0,30,0">
                        <Label.GestureRecognizers>
                            <TapGestureRecognizer Command="{Binding ProfileCommand}" />
                        </Label.GestureRecognizers>
                    </Label>

                    <BoxView
                        Grid.ColumnSpan="3" 
                        BackgroundColor="Black" 
                        HeightRequest="1" 
                        VerticalOptions="End" 
                        HorizontalOptions="FillAndExpand"
                        Margin="28,0,28,-7"/>
                </Grid>

                <!--Movies, TV Series, Documentaries, Anime-->
                <Grid ColumnSpacing="0" Margin="0,0,0,0" BackgroundColor="LightSeaGreen">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition />
                        <ColumnDefinition />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>
                    <Label Grid.Column="0" Text="Movies"
                       FontSize="16"
                       FontAttributes="Bold"
                       TextColor="Black"
                       HorizontalTextAlignment="Start"
                       Padding="30,0,0,0">
                        <Label.GestureRecognizers>
                            <TapGestureRecognizer Command="{Binding MoviesCommand}" />
                        </Label.GestureRecognizers>
                    </Label>
                    <Label Grid.Column="1" Text="TV Series"
                       FontSize="16"
                       TextColor="Black"
                       FontAttributes="Bold"
                       HorizontalTextAlignment="Center"
                       Padding="-30,0,0,0">
                        <Label.GestureRecognizers>
                            <TapGestureRecognizer Command="{Binding TVSeriesCommand}" />
                        </Label.GestureRecognizers>
                    </Label>
                    <Label Grid.Column="2" Text="Documentaries"
                       FontSize="16"
                       TextColor="Black"
                       FontAttributes="Bold"
                       HorizontalTextAlignment="Center"
                       Padding="-10,0,0,0">
                        <Label.GestureRecognizers>
                            <TapGestureRecognizer Command="{Binding DocumentariesCommand}" />
                        </Label.GestureRecognizers>
                    </Label>
                    <Label Grid.Column="3" Text="Anime"
                       FontSize="16"
                       TextColor="Black"
                       FontAttributes="Bold"
                       HorizontalTextAlignment="End"
                       Padding="0,0,30,0">
                        <Label.GestureRecognizers>
                            <TapGestureRecognizer Command="{Binding AnimeCommand}" />
                        </Label.GestureRecognizers>
                    </Label>
                </Grid>
            </StackLayout>
            <ScrollView Margin="0,10,0,0" BackgroundColor="Aqua">
                <Grid Margin="30,0,30,0">
                    <!--TO DO: Opcija za več vrstic. Trenutno ob dodajanju novih vrstic se spacing breaka.-->
                    <Grid.RowDefinitions>
                        <RowDefinition Height="200" />
                        <RowDefinition Height="200" />
                        <RowDefinition Height="200" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>

                    <Frame Grid.Row="0" Grid.Column="0" BorderColor="Black" HasShadow="True">
                        <Label Text="x" HorizontalOptions="Center" VerticalOptions="Center" />
                    </Frame>

                    <Frame Grid.Row="0" Grid.Column="1" BorderColor="Black" HasShadow="True">
                        <Label Grid.Column="1" Text="x" HorizontalOptions="Center" VerticalOptions="Center" />
                    </Frame>

                    <Frame Grid.Row="1" Grid.Column="0" BorderColor="Black" HasShadow="True">
                        <Label Grid.Row="1" Text="x" HorizontalOptions="Center" VerticalOptions="Center" />
                    </Frame>

                    <Frame Grid.Row="1" Grid.Column="1" BorderColor="Black" HasShadow="True">
                        <Label Grid.Row="1" Grid.Column="1" Text="x" HorizontalOptions="Center" VerticalOptions="Center" />
                    </Frame>

                    <Frame Grid.Row="2" Grid.Column="0" BorderColor="Black" HasShadow="True">
                        <Label Grid.Row="2" Text="x" HorizontalOptions="Center" VerticalOptions="Center" />
                    </Frame>

                    <Frame Grid.Row="2" Grid.Column="1" BorderColor="Black" HasShadow="True">
                        <Label Grid.Row="2" Grid.Column="1" Text="x" HorizontalOptions="Center" VerticalOptions="Center" />
                    </Frame>

                </Grid>
            </ScrollView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>